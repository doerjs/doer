{
  "name": "doer",
  "description": "An React Micro App Build Toolkit",
  "keywords": [
    "react",
    "react-router",
    "webpack",
    "module-federation",
    "micro-frontends",
    "build-tool"
  ],
  "scripts": {
    "preinstall": "husky install && npx only-allow pnpm",
    "beta": "pnpm changeset pre enter beta",
    "alpha": "pnpm changeset pre enter alpha",
    "rc": "pnpm changeset pre enter rc",
    "exit": "pnpm changeset pre exit",
    "pub": " pnpm install && pnpm changeset && pnpm changeset version && git add . && git commit -m 'chore(version): 发布新版本' && git push origin master && pnpm publish -r",
    "clean": "rm -rf node_modules **/*/node_modules",
    "docs": "docsify serve docs"
  },
  "lint-staged": {
    "**/*.{js,jsx}": [
      "prettier --write",
      "eslint"
    ],
    "**/*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@doerjs/eslint-config": "workspace:*",
    "@doerjs/prettier-config": "workspace:*",
    "docsify-cli": "^4.4.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2"
  }
}
